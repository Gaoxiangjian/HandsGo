<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

    <Button
        android:id="@+id/image_item_3"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:focusable="false" />

    <ImageView
        android:id="@+id/image_item_2"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/image_item_3"
        android:src="@drawable/tab_divider" />

    <LinearLayout
        android:id="@+id/linearlayout_out_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/image_item_2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativelayout_in_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_match_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_new"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/img_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/new_2"
                android:gravity="center"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_in_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/b0" />

            <TextView
                android:id="@+id/text_black_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_black"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/img_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text_black_name"
                android:background="@drawable/w0" />

            <TextView
                android:id="@+id/text_white_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_white"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>